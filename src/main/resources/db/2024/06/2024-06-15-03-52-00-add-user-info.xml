<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2024-06-15-03-52-00-add-user-info" author="nikolenko">
        <createTable tableName="user_info">
            <column autoIncrement="true" name="user_id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_user_info"/>
            </column>
            <column name="address" type="VARCHAR(256)"/>
            <column name="phone" type="varchar(128)"/>
        </createTable>
    </changeSet>

    <changeSet id="2024-06-15-03-52-00-add-user-info-fk" author="nikolenko">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_info"
                                 constraintName="fk_user_info_users"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>
