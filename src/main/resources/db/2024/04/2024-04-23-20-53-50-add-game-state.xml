<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2024-04-23-20-53-50-add-game-state" author="nikolenko">
        <createTable tableName="game_state">
            <column name="value" type="varchar(64)">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_game_state"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2024-04-23-20-53-50-add-game-state-value" author="nikolenko">
        <insert tableName="game_state">
            <column name="value">GAME</column>
        </insert>
        <insert tableName="game_state">
            <column name="value">WIN</column>
        </insert>
        <insert tableName="game_state">
            <column name="value">LOSE</column>
        </insert>
    </changeSet>

</databaseChangeLog>