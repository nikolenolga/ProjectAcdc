<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


    <changeSet id="2024-05-11-22-19-00-add-quest" author="nikolenko">
        <createTable tableName="quest">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_quest"/>
            </column>
            <column name="name" type="varchar(512)"/>
            <column name="description" type="VARCHAR(2048)"/>
            <column name="first_question_id" type="BIGINT"/>
            <column name="user_author_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="2024-05-11-22-19-00-add-quest-fk" author="nikolenko">
        <addForeignKeyConstraint baseColumnNames="user_author_id"
                                 baseTableName="quest"
                                 constraintName="fk_quest_users"
                                 onDelete="SET NULL"
                                 onUpdate="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>
